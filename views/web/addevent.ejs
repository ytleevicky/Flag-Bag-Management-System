    <form action="/web/" method="POST" onsubmit="createForm(this);return false">

        <div class="form-group row">
            <label for="inputUsername" class="col-sm-2 col-form-label">活動名稱</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Web[eventName]" required>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">活動日期</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="Web[dateOfEvent]">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">賣旗地區</label>
            <div class="col-sm-10">
                <select class="form-control" name="Web[eventLocation]" required>
                    <option value="">請選擇所屬地區</option>
                    <option value="hk">全港</option>
                    <!-- <option value="Tin Ma Court">九龍城浸信會禧年(恩平)小學</option>
                    <option value="City One Shatin">聖公會靈愛小學</option>
                    <option value="City One Shatin">九龍堂宣道小學</option>
                    <option value="City One Shatin">香港萬國宣道浸信會社會服務田裕浸信會長者鄰舍中心</option> -->
                </select>
            </div>
        </div>

        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">旗站數目</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="Web[numOfStation]">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputStation" class="col-sm-2 col-form-label">旗袋總數</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="inputStation">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2">站長人數</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="inputStation">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2">義工人數</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="inputStation">
            </div>
        </div>


        <button type="button" class="btn btn-success" style="float:right;">儲存</button>

        <button type="button" class="btn btn-danger" style="float:right;">取消</button>

    </form>

</body>